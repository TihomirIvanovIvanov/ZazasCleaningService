@model List<ZazasCleaningService.Web.ViewModels.Products.Order.Cart.ProductOrdersCartViewModel>
@{
    ViewData["Title"] = "ProductsCart";
}

<!-- banner 2 -->
<div class="banner2-w3ls">

</div>
<!-- //banner 2 -->
<!-- page details -->
<div class="breadcrumb-agile">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Products Orders</li>
        </ol>
    </nav>
</div>
<!-- //page details -->
@if (Model.Count == 0)
{
    <h2 class="text-center text-primary">You have no orders in your cart.</h2>
    <hr class="hr-2 bg-primary">
}
else
{
    <div class="py-5">
        <div class="container py-xl-5 py-lg-3">
            <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">Products</h2>
            <div id="orders" class="text-primary">
                <div class="order-info row mt-4">
                    <h3 class="col-md-3 text-left">#</h3>
                    <h3 class="col-md-3 text-left">Image</h3>
                    <h3 class="col-md-3 text-left">Product</h3>
                    <h3 class="col-md-3 text-left">Quantity</h3>
                </div>
                <hr class="hr-2 bg-primary">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="order row">
                        <h5 class="col-md-3 text-left">@(i + 1)</h5>
                        <div class="col-md-3">
                            <img class="img-thumbnail product-cart-image" src="@Model[i].ProductPicture" />
                        </div>
                        <h5 class="col-md-3 text-left">@Model[i].ProductName</h5>
                        <h5 class="col-md-3 text-left order-quantity">x(@Model[i].Quantity)</h5>
                    </div>
                }
            </div>
            <hr class="hr-2 bg-primary">
            <form action="/Order/Cart/Complete" method="post" class="d-flex justify-content-between">
                <button class="btn btn-primary font-weight-bold">Complete</button>
            </form>
        </div>
    </div>
}