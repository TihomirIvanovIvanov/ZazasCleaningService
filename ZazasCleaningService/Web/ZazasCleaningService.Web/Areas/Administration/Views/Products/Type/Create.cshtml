@model ZazasCleaningService.Web.ViewModels.Products.Create.ProductTypesCreateInputModel
@{
    ViewData["Title"] = "Create";
}

<!-- banner 2 -->
<div class="banner2-w3ls">

</div>
<!-- //banner 2 -->
<!-- page details -->
<div class="breadcrumb-agile">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Create Product Type</li>
        </ol>
    </nav>
</div>
<!-- //page details -->
<!-- contact -->
<div class="py-5">
    <div class="container py-xl-5 py-lg-3">
        <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">Create Product Type</h2>
        <div class="row contact_wthreerow agileits-w3layouts pt-4">
            <div class="col-lg-7 w3l_contact_form">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name"
                               type="text"
                               name="Name"
                               class="form-control"
                               placeholder="Name"
                               required="">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary submit">Create Type</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- //contact -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}