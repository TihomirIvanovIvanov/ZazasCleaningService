@model ZazasCleaningService.Web.ViewModels.Products.Order.ProductsOrderInputModel
@{
    ViewData["Title"] = "Create";
}

<!-- banner 2 -->
<div class="banner2-w3ls">

</div>
<!-- //banner 2 -->
<!-- page details -->
<div class="breadcrumb-agile">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Products/Details/@this.ViewData["productId"]">@this.ViewData["name"]</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Order</li>
        </ol>
    </nav>
</div>
<!-- //page details -->
<div class="py-5">
    <div class="container py-xl-5 py-lg-3">
        <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">
            Order @this.ViewData["name"]
        </h2>
        <div class="row contact_wthreerow agileits-w3layouts pt-4">
            <div class="col-lg-7 w3l_contact_form">
                <form method="post">
                    <input type="hidden" value="@this.ViewData["productId"]" name="ProductId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input for="quantity"
                               type="number"
                               name="quantity"
                               class="form-control"
                               placeholder="Quantity"
                               required="" />
                    </div>
                    <button type="submit" class="btn btn-primary submit">Order</button>
                </form>
            </div>
        </div>
    </div>
</div>
