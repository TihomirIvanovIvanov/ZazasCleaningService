@{
    ViewData["Title"] = "All";
}

<!-- banner 2 -->
<div class="banner2-w3ls">

</div>
<!-- //banner 2 -->
<!-- page details -->
<div class="breadcrumb-agile">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Services</li>
        </ol>
    </nav>
</div>
<!-- page details -->
@if (Model.Count == 0)
{
    <div class="offers-w3ls py-5">
        <div class="container py-xl-5 py-lg-3">
            <div class="row">
                <div class="col-lg-6 offers-agiles-right mt-xl-4 mt-lg-0 mt-4">
                    <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">
                        Services
                    </h2>
                    <h4 class="text-center text-primary">You have no services.</h4>
                    <hr class="hr-2 bg-primary">
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="py-5">
        <div class="container py-xl-5 py-lg-3">
            <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">Services</h2>
            <ul class="demo">
                @foreach (var service in Model)
                {
                    <li>
                        <div class="gallery-grid1">
                            <img src="@service.Picture" alt=" " class="img-fluid" />
                            <div class="p-mask">
                                <h4>@service.Name</h4>
                                <div class="w3l-button">
                                    <a href="/Services/Details/@service.Id"
                                       class="btn btn-sm animated-button victoria-two text-white mt-4">Details</a>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
}
