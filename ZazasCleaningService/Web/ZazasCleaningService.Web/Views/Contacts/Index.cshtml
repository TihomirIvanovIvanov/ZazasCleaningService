@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Index";
}

<!-- banner 2 -->
<div class="banner2-w3ls">

</div>
<!-- //banner 2 -->
<!-- page details -->
<div class="breadcrumb-agile">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
        </ol>
    </nav>
</div>
<!-- //page details -->
<!-- contact -->
<div class="contact py-5">
    <div class="container py-xl-5 py-lg-3">
        <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">Contact Us</h2>
        <div class="row contact_wthreerow agileits-w3layouts pt-4">
            <div class="col-lg-7 w3l_contact_form">
                <form method="post">
                    <div class="form-group">
                        <input type="text" name="Name" class="form-control" placeholder="Name" required="">
                    </div>
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" placeholder="Email" required="">
                    </div>
                    <div class="form-group">
                        <input type="text" name="Phone" class="form-control" placeholder="Phone Number" required="">
                    </div>
                    <div class="form-group">
                        <textarea name="Message" class="form-control" placeholder="Message.."></textarea>
                    </div>
                    <input type="hidden" id="RecaptchaValue" name="RecaptchaValue" />
                    <button type="submit" class="btn btn-primary submit">Send Message</button>
                </form>
            </div>
            <div class="col-lg-5 agileits_w3layouts_contact_gridl mt-lg-0 mt-5">
                <div class="agileits_mail_grid_right_grid">
                    <h4 class="mb-4 title-2-agiles">Cleaning Services</h4>
                    <p>If you have any questions or recommendations, please contact us by sending us an email, our team will review it and will contact you within 24 hours.</p>
                </div>
                <div class="agileits_mail_grid_right_grid mt-md-5 mt-4">
                    <h4 class="mb-4 title-2-agiles">Our Address</h4>
                    <ul class="contact_info list-unstyled">
                        <li>
                            <i class="fas fa-location-arrow mr-3"></i>Geo Milev street № 8, Sofia,Bulgaria.
                        </li>
                        <li class="my-4">
                            <i class="fas fa-envelope-open mr-3"></i>
                            <a href="mailto:info@example.com">zaza@gmail.com</a>
                        </li>
                        <li>
                            <i class="fas fa-phone mr-3"></i>+35988 123 456
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //contact -->
<!-- map -->
<div class="w3ls_map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d187672.54608591847!2d23.183862253696194!3d42.695599149158284!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa8682cb317bf5%3A0x400a01269bf5e60!2z0KHQvtGE0LjRjw!5e0!3m2!1sbg!2sbg!4v1584035043618!5m2!1sbg!2sbg"
            style="border:0"></iframe>
</div>
<!-- //map -->

@section Scripts
{
    <script src="https://www.google.com/recaptcha/api.js?render=@this.Configuration["GoogleReCaptcha:Key"]"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@this.Configuration["GoogleReCaptcha:Key"]', { action: 'contact_form' }).then(function (token) {
                document.getElementById("RecaptchaValue").value = token;
            });
        });
    </script>
}
