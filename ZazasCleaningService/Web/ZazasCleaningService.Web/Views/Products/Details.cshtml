@using ZazasCleaningService.Common
@model ZazasCleaningService.Web.ViewModels.Products.Details.ProductsDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<!-- banner 2 -->
<div class="banner2-w3ls">

</div>
<!-- //banner 2 -->
<!-- page details -->
<div class="breadcrumb-agile">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Products/All">Products</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
</div>
<!-- //page details -->
<!-- offers -->
<div class="offers-w3ls py-5">
    <div class="container py-xl-5 py-lg-3">
        <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">Product Details</h2>
        <div class="row">
            <div class="col-lg-6 offers-agiles-left">
                <img src="@Model.Picture" alt="" class="img-fluid">
                <div class="p-mask w-50 justify-content-around">
                    <div class="w3l-button text-center">
                        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <a href="/Administration/Products/Edit/@Model.Id"
                               class="btn btn-sm animated-button victoria-two text-dark mt-4">
                                Edit
                            </a>
                            <a href="/Administration/Products/Delete/@Model.Id"
                               class="btn btn-sm animated-button victoria-two text-dark mt-4">
                                Delete
                            </a>
                        }
                        else
                        {
                            <a href="/Products/Order/@Model.Id"
                               class="btn btn-sm animated-button victoria-two text-dark mt-4">
                                Order
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 offers-agiles-right mt-xl-4 mt-lg-0 mt-4">
                <h4 class="mb-4 title-2-agiles">@Model.Name</h4>
                <p class="mt-4">@Model.Description</p>
            </div>
        </div>
    </div>
</div>
<!-- //offers -->